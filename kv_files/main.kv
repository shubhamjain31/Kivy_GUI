Screen:
	
	MDCard:
		size_hint: None, None
		size:300, 400
		pos_hint: {"center_x":0.5, "center_y":0.5}
		elevation:10
		padding:25
		spacing:25
		orientation:'vertical'

		MDLabel:
			id: welcome_label
			text:"Welcome !"
			font_size:40
			halign:'center'
			size_hint_y:None
			height:self.texture_size[1]
			padding_y:15

        MDRoundFlatButton:
			text:"Sign Up"
			font_size:12
			pos_hint:{"center_x":0.5}
			on_press:app.createAccount()

        MDRoundFlatButton:
            text:"Sign In"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press:app.login()